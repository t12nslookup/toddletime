= bootstrap_form_for(@child, layout: :horizontal) do |f|
  = f.text_field :name
  = f.select(:gender, ['Boy', 'Girl'])
  #date-container
    = f.date_picker :date_of_birth, value: @child.date_of_birth.try(:strftime, "%d/%b/%Y")
  = f.text_area :address
  = f.text_field :postcode
  = f.text_area :medical_conditions
  = f.text_area :special_needs
  #date-container
    = f.date_picker :registered_date, value: @child.registered_date.try(:strftime, "%d/%b/%Y")
  = f.form_group do
    = f.primary
:javascript
  $('#date-container .input-group.date').datepicker({
    format: "dd/M/yyyy",
    orientation: "top auto",
    autoclose: true,
    todayHighlight: true
  });
%para
- if @child.errors.any?
  #error_explanation
    %h2
      = pluralize(@child.errors.count, "error")
      prevented the creation of this child:
    - @child.errors.full_messages.each do |msg|
      %li= msg
