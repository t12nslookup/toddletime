= bootstrap_form_for(@what_contact, layout: :horizontal) do |f|
  = f.text_field :contact_type, autocomplete: :off
  = f.form_group do
    = f.primary
    - if @what_contact.id
      = link_to 'Delete What Contact', @what_contact, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
%para
= errors_for @what_contact
