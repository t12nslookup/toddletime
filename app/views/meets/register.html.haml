%h1 Meet Details
%table.table.table-condensed.table-striped.table-hover
  %tr
    %th Date of meet
    %td= @meet.meet_date.to_s(:long_ordinal)
  - if @meet.meet_type.present?
    %tr
      %th Meet Type
      %td= @meet.meet_type.name

%h1
  Registered children
  %ul.label.label-info= @children.count
%table.table.table-condensed.table-striped.table-hover
  %thead
    %tr
      %th Name
      %th Gender
      %th Medical Conditions
      %th Special Needs
      %th Contact Details
  %tbody
    - @children.includes(:carers).each do |child|
      %tr
        %td= child.name
        %td= child.gender
        %td= child.medical_conditions
        %td= child.special_needs
        - child.carers.each do |carer|
          %td= carer.phone
    - if (Date.today == @meet.meet_date)
      %tr
        %td{:align => 'center', :colspan => 5}= link_to 'Register a Child', new_meet_register_child_path(@meet)
%h1
  Registered Carers
  %ul.label.label-info= @carers.count
%table.table.table-condensed.table-striped.table-hover
  %thead
    %tr
      %th Name
      %th Contact Details
  %tbody
    - @carers.each do |carer|
      %tr
        %td= carer.name
        %td= carer.phone
    - if (Date.today == @meet.meet_date)
      %tr
        %td{:align => 'center', :colspan => 5}= link_to 'Register a Carer', new_meet_register_carer_path(@meet)
%h1
  Registered Leaders
  %ul.label.label-info= @leaders.count
%table.table.table-condensed.table-striped.table-hover
  %thead
    %tr
      %th Name
      %th Email
  %tbody
    - @leaders.each do |leader|
      %tr
        %td= leader.name
        %td= leader.email
    - if (Date.today == @meet.meet_date)
      %tr
        %td{:align => 'center', :colspan => 5}= link_to 'Register a Leader', new_meet_register_leader_path(@meet)
%ul.nav.nav-pills
  %li= link_to 'View All Meets', meets_path
